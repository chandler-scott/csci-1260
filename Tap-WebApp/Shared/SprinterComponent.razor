@using TapLib;

<div class="container">
    <p class="name">@Runner.Name</p>
    <p class="name">@Runner.CurrentPosition</p>

    <div class="circle" style="left: @(Runner.CurrentPosition)px;"></div>
</div>

<style>
    .container {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
    }

    .name {
        margin-bottom: 10px; /* Adjust the spacing between name and circle */
    }

    .circle {
        width: 40px;
        height: 40px;
        background-color: #FF5733; /* You can change the color */
        border-radius: 50%;
        position: relative; /* Ensure positioning is relative for left property */
    }
</style>

@code {
    [Parameter]
    public Sprinter Runner { get; set; }


}
