@page "/icedcoffees"
@inject ICoffeeService _coffeeService
<PageTitle>Iced Coffee</PageTitle>

<CoffeeScroller Title="Iced Coffees" Coffees=@_icedCoffees/>


@code {
    private List<Coffee> _icedCoffees = new();

    protected override async Task OnInitializedAsync()
    {
        _icedCoffees = await _coffeeService.GetIcedCoffeesAsync();
    }
}