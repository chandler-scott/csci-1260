@page "/"
@inject ICoffeeService _coffeeService

<PageTitle>Coffee</PageTitle>
<div class="index-container">
    <h3>Featured Coffee</h3>
    <CoffeeQuickView Coffee=@_featuredCoffee/>
    <div>
        <a class="page-link" href="hotcoffees">All Hot Coffees</a>
        <a class="page-link" href="icedcoffees">All Iced Coffees</a>
    </div>
</div>

<style>
    .index-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center; /* Optional for inner text alignment */
    }

    .index-container h3 {
        margin-bottom: 30px;
    }

    .page-link {
        padding: 10px;
        color: #B0B0B0;
        text-decoration: none;
        border: none;
        background-color:transparent;
        display: inline;
    }

    .page-link:hover {
            background-color: rgba(255,255,255,0.1);
            color: #00D69B;
    }
</style>

@code {
    private Coffee _featuredCoffee = new Coffee();
    private Random _random = new Random();

    protected override async Task OnInitializedAsync()
    {
        _featuredCoffee = await _coffeeService.GetRandomCoffeeAsync();
    }
}