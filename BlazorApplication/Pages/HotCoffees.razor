@page "/hotcoffees"
@inject ICoffeeService _coffeeService

<PageTitle>Hot Coffee</PageTitle>

<CoffeeScroller Title="Hot Coffees" Coffees=@_hotCoffees/>


@code {
    private List<Coffee> _hotCoffees = new();

    protected override async Task OnInitializedAsync()
    {
        _hotCoffees = await _coffeeService.GetHotCoffeesAsync();
    }
}